fetch purefa_array_space_bytes, from: now()-2h
| summarize last_bytes = last(value),
            by: { dt.entity.pure_storage_flash_array }
| extend space_TB  = last_bytes / 1000000000000.0,      // decimal TB
         space_TiB = last_bytes / 1099511627776.0       // binary TiB
| fields dt.entity.pure_storage_flash_array,
         last_bytes,
         space_TB,
         space_TiB
