timeseries space_bytes = avg(purefa_array_space_bytes),
           by: { dt.entity.pure_storage_flash_array },
           from: -2h
| summarize latest_space_bytes = last(space_bytes),
            by: { dt.entity.pure_storage_flash_array }
| extend arrayNameFull = entityName(dt.entity.pure_storage_flash_array)
| extend arrayName = replace(arrayNameFull, "FlashArray ", "")   // remove the prefix
| sort arrayName asc
| fields arrayName, latest_space_bytes
