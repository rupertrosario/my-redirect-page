# Basic text email (no attachment)
$from = 'alerts@yourdomain.com'
$to   = 'you@yourdomain.com'
$srv  = 'smtp.yourdomain.com'   # relay or mail server
$subj = 'Job done'
$body = 'Hello, the task completed successfully.'

Send-MailMessage -From $from -To $to -Subject $subj -Body $body -SmtpServer $srv

# With creds, TLS, HTML, and attachment
$cred = Get-Credential  # or load from a secret vault
Send-MailMessage -From $from -To $to -Subject 'Report' `
  -Body "<b>See attached</b>" -BodyAsHtml `
  -Attachments 'C:\Reports\report.csv' `
  -SmtpServer $srv -UseSsl -Credential $cred -Port 587
