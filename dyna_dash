import { execution } from '@dynatrace-sdk/automation-utils';

export default async function () {
  console.log("🔑 Testing Cohesity Helios API key connectivity...");

  // 1️⃣ Load your stored credential
  const creds = await execution.credentials.get('cohesity-helios-api-key');
  const apiKey = creds?.value || creds?.token || creds?.password;

  if (!apiKey) {
    throw new Error("❌ API key not found in credentials vault");
  }

  // 2️⃣ Define the endpoint and headers
  const url = "https://helios.cohesity.com/v2/mcm/cluster-mgmt/info";
  const headers = { accept: "application/json", apiKey };

  // 3️⃣ Use the built-in fetch instead of http.get
  const resp = await fetch(url, { headers });

  console.log(`➡️ HTTP status: ${resp.status}`);
  if (resp.status !== 200) {
    throw new Error(`❌ API key test failed (HTTP ${resp.status})`);
  }

  // 4️⃣ Parse and print the result
  const data = await resp.json();
  const clusters = data?.cohesityClusters?.map(c => c.ClusterName) || [];
  console.log(`✅ API key works! Found ${clusters.length} cluster(s): ${clusters.join(", ")}`);

  return { success: true, clusterCount: clusters.length, clusters };
}
