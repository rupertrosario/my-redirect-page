// âœ… No imports, no workflow, no http â€” plain JavaScript test
const apiKey = "PASTE-YOUR-HELIOS-API-KEY";
const baseUrl = "https://helios.cohesity.com";

const headers = {
  "accept": "application/json",
  "apiKey": apiKey
};

// main test
(async () => {
  try {
    console.log("ğŸ”¹ Fetching cluster list from Cohesity Helios...");
    const response = await fetch(`${baseUrl}/v2/mcm/cluster-mgmt/info`, { headers });

    if (!response.ok) {
      throw new Error(`âŒ HTTP ${response.status} - ${response.statusText}`);
    }

    const data = await response.json();

    // Print only names and IDs
    const clusters = data.cohesityClusters?.map(c => ({
      name: c.ClusterName,
      id: c.ClusterId
    }));

    console.log("âœ… Clusters found:");
    console.log(clusters);

  } catch (err) {
    console.error("âŒ Error:", err.message);
  }
})();
