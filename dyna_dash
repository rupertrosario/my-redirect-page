export default async function () {
  console.log("🔑 Testing Cohesity Helios API key manually...");

  // 1️⃣ Paste your Helios API key here temporarily
  const apiKey = "PASTE_YOUR_API_KEY_HERE";   // remove after test!

  // 2️⃣ Define test endpoint
  const url = "https://helios.cohesity.com/v2/mcm/cluster-mgmt/info";
  const headers = { accept: "application/json", apiKey };

  // 3️⃣ Call Cohesity Helios
  const resp = await fetch(url, { headers });
  console.log(`➡️ HTTP status: ${resp.status}`);
  if (resp.status !== 200) throw new Error(`❌ API key test failed (HTTP ${resp.status})`);

  // 4️⃣ Parse and log result
  const data = await resp.json();
  const clusters = data?.cohesityClusters?.map(c => c.ClusterName) || [];
  console.log(`✅ API key works! Found ${clusters.length} cluster(s): ${clusters.join(", ")}`);

  // 5️⃣ Return output
  return { success: true, clusterCount: clusters.length, clusters };
}
