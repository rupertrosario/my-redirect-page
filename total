# --- Totals Table ---
$totals = [PSCustomObject]@{
    TotalCapacityBytes_TiB  = [math]::Round((($results | Select-Object -ExpandProperty TotalCapacityBytes_TiB)  | Measure-Object -Sum).Sum, 1)
    LocalUsageBytes_TiB     = [math]::Round((($results | Select-Object -ExpandProperty LocalUsageBytes_TiB)     | Measure-Object -Sum).Sum, 1)
    LocalAvailableBytes_TiB = [math]::Round((($results | Select-Object -ExpandProperty LocalAvailableBytes_TiB) | Measure-Object -Sum).Sum, 1)
}

Write-Host "`n--- Totals ---`n"
$totals | Format-Table -AutoSize
