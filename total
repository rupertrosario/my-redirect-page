# Display results table
$results | Format-Table -AutoSize

# --- Totals ---
$totals = [PSCustomObject]@{
    Cluster                = "TOTAL"
    TotalCapacityBytes_TiB = ($results.TotalCapacityBytes_TiB | Measure-Object -Sum).Sum
    LocalUsageBytes_TiB    = ($results.LocalUsageBytes_TiB | Measure-Object -Sum).Sum
    LocalAvailableBytes_TiB= ($results.LocalAvailableBytes_TiB | Measure-Object -Sum).Sum
    ConsumedPercent        = [math]::Round(($results.LocalUsageBytes_TiB | Measure-Object -Sum).Sum / 
                                           (($results.TotalCapacityBytes_TiB | Measure-Object -Sum).Sum) * 100, 1)
}

Write-Host "`n--- Totals ---`n"
$totals | Format-Table -AutoSize
