index=your_index
| rex field=_raw "\"Description\"\s*:\s*\"(?<description>(?:[^\"\\\\]|\\\\.)*)\""
| eval description=replace(description, "\\\\\"", "\"")
| table description


 ...your search...
| bin _time span=1d
| stats count AS lockouts BY clustername, account, _time
| eval two=if(lockouts=2,1,0), three=if(lockouts=3,1,0)
| stats sum(two) AS days_with_2, sum(three) AS days_with_3 BY clustername, account
| sort clustername, account


... your base lockout search producing _time clustername account ...
| sort 0 clustername account _time
| transaction clustername account maxspan=24h keepevicted=true
| where eventcount>=2
| eval threshold="T1: User 2-in-24h",
      lockouts_24h=eventcount,
      threshold_reached_at=_time+duration
| table threshold clustername account lockouts_24h threshold_reached_at

| append [
  ... your base lockout search producing _time clustername account ...
  | sort 0 clustername _time
  | transaction clustername maxspan=24h keepevicted=true
  | where eventcount>=3
  | eval threshold="T2: Cluster 3-in-24h (any user)",
        account="—",
        lockouts_24h=eventcount,
        threshold_reached_at=_time+duration
  | table threshold clustername account lockouts_24h threshold_reached_at
]
| sort clustername threshold_reached_at


<your base lockout search that yields _time clustername account>
| bin _time span=1d
| stats count AS cnt BY clustername, _time, account
| eval day=strftime(_time,"%Y-%m-%d")
| eventstats sum(cnt) AS cluster_total BY clustername, day
| eval t1_user = if(cnt>=2, account."(".cnt.")", null())
| eval t2_user = if(cluster_total>=3, account."(".cnt.")", null())
| stats values(t1_user) AS t1_users values(t2_user) AS t2_users max(cluster_total) AS cluster_total BY clustername, day
| eval t1_users=mvfilter(isnotnull(t1_users)), t2_users=mvfilter(isnotnull(t2_users))
| eval "T1 users (≥2 by same user)" = if(mvcount(t1_users)>0, mvjoin(t1_users," "), null())
| eval "T2 users (cluster≥3, any user)" = if(cluster_total>=3, mvjoin(t2_users," "), null())
| where isnotnull('T1 users (≥2 by same user)') OR cluster_total>=3
| table day clustername "T1 users (≥2 by same user)" "T2 users (cluster≥3, any user)" cluster_total
| sort day, clustername
