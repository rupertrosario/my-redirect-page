// --- Temporary Cohesity API test ---
// Paste your API key below, run once, and delete the script after.

const apiKey = "PASTE-YOUR-API-KEY-HERE";  // 🔒 Only used in memory for this run

const url = "https://helios.cohesity.com/irisservices/api/v1/public/mcm/stats/protectionSummary";

const response = http.get(url, {
  headers: {
    "apiKey": apiKey,
    "accept": "application/json"
  }
});

if (response.statusCode !== 200) {
  fail(`❌ API request failed: ${response.statusCode}\n${response.body}`);
}

log.info(`✅ Success! Status: ${response.statusCode}`);
log.info(response.body);   // Prints the JSON result
success();
