<html>
<head>
  <title>PowerShell Script Runner</title>
  <hta:application
    id="psRunner"
    border="thin"
    caption="yes"
    showintaskbar="yes"
    singleinstance="yes"
    windowstate="normal"
  />
  <script language="VBScript">
    Sub RunScript(scriptPath)
        Dim shell, output, cmd
        Set shell = CreateObject("WScript.Shell")

        cmd = "powershell -ExecutionPolicy Bypass -File """ & scriptPath & """"
        output = shell.Exec(cmd).StdOut.ReadAll

        document.getElementById("output").innerText = output
    End Sub
  </script>
</head>
<body style="font-family:Arial">
  <h2>Run PowerShell Scripts</h2>
  <button onclick="RunScript("C:\Scripts\script1.ps1")">Run Script 1</button>
  <button onclick="RunScript("C:\Scripts\script2.ps1")">Run Script 2</button>
  <br><br>
  <button onclick="window.close()">Close</button>

  <h3>Output:</h3>
  <pre id="output" style="background:#f0f0f0; padding:10px; border:1px solid #ccc;"></pre>
</body>
</html>



$data | ForEach-Object {
    $value = [math]::Round($_.Consumed, 1)
    $colored = if ($value -ge 80) {
        "`e[31m{0,5}%`e[0m" -f $value  # Red
    } else {
        "`e[32m{0,5}%`e[0m" -f $value  # Green
    }

    [pscustomobject]@{
        Name     = $_.Name
        Consumed = $colored
    }
} | Format-Table -AutoSize
